<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameDetail"
    android:background="#131313"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="110dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/xxpaass_logo" />

        <ImageView
            android:id="@+id/notification"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/cs"
            app:srcCompat="@drawable/ic_notifications_black_24dp" />

        <ImageView
            android:id="@+id/cs"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="309dp"
            android:layout_marginTop="12dp"
            app:srcCompat="@drawable/ic_call_24" />

        <ImageView
            android:id="@+id/account_profile"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="11dp"
            android:layout_toEndOf="@+id/notification"
            app:srcCompat="@drawable/ic_account_circle_24" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/gameIcon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="10dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/baseline_rounded_corner_24"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView

            android:id="@+id/gameName"
            android:layout_width="288dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_toEndOf="@+id/gameIcon"
            android:textSize="24sp"
            android:text="Anjay"
            android:textColor="#D9D9D9"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/gameIcon" />

        <TextView
            android:id="@+id/gameDeveloper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:textColor="#D9D9D9"
            android:layout_toEndOf="@+id/gameIcon"
            android:layout_below="@+id/gameName"
            android:text="Rockstar Games" />
        <TextView
            android:id="@+id/size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:textColor="#D9D9D9"
            android:layout_toEndOf="@+id/gameIcon"
            android:layout_below="@+id/releaseDate"
            android:text="Size" />
        <TextView
            android:id="@+id/releaseDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:textColor="#D9D9D9"
            android:layout_toEndOf="@+id/gameIcon"
            android:layout_below="@+id/gameDeveloper"
            android:text="release Date" />


    </RelativeLayout>
    <!-- Game Developer -->





    <!-- Game Tags -->

    <!-- Game Details -->
    <LinearLayout
        android:id="@+id/gameDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="152dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start">

        <Button
            android:id="@+id/button_add_to_library"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/red"
            android:text="Add To Library" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Download"
            android:backgroundTint="@color/red"
            android:layout_marginStart="4dp"
            android:layout_toEndOf="@id/button_add_to_library"/>

</RelativeLayout>
    <!-- Install Button -->

    <!-- Game Screenshot -->

    <TextView
        android:id="@+id/gameDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textColor="#D9D9D9"
        android:text="When a street hustler, a retired bank robber, and a terrifying psychopath find themselves entangled with some of the most terrifying and..."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="112dp" />

</LinearLayout>
